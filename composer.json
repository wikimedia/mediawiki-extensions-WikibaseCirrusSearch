{
	"name": "wikibase/cirrussearch",
	"type": "mediawiki-extension",
	"description": "Extension for Wikibase to implement CirrusSearch functionality.",
	"homepage": "https://www.mediawiki.org/wiki/Extension:WikibaseCirrusSearch",
	"keywords": [
		"wikibase",
		"search",
		"elasticsearch",
		"cirrussearch",
		"wikidata"
	],
	"authors": [
		{
			"name": "WMF Search Platform Team"
		}
	],
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=5.6.99",
		"composer/installers": ">=1.0.1"
	},
	"support": {
		"issues": "https://phabricator.wikimedia.org/",
		"irc": "irc://irc.freenode.net/wikimedia-discovery"
	},
	"require-dev": {
		"jakub-onderka/php-console-highlighter": "0.3.2",
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"mediawiki/minus-x": "0.3.1",
		"wikibase/wikibase-codesniffer": "^0.5.1",
		"php-coveralls/php-coveralls": "^2.0.0",
		"mediawiki/mediawiki-phan-config": "0.5.0"
	},
	"scripts": {
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"test": [
			"composer validate --no-interaction",
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s",
			"minus-x check ."
		]
	},
	"extra": {
		"phan-taint-check-plugin": "1.5.0"
	}
}
